<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="@dimen/book_list_item_padding">

    <ImageView
        android:id="@+id/fullBookCover"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/book_list_item_cover_marginend"
        android:layout_marginEnd="@dimen/book_list_item_cover_marginend"
        android:contentDescription="@string/book_cover"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/listBookTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/fullBookCover"
        android:layout_toEndOf="@id/fullBookCover"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/book_list_item_title_marginend"
        android:layout_marginEnd="@dimen/book_list_item_title_marginend"
        android:maxLines="1"
        android:textSize="@dimen/text_size_medium"
        tools:text="Book Title" />

    <TextView
        android:id="@+id/listBookSubTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/booklist_item_subtitle_height"
        android:singleLine="true"
        android:textSize="@dimen/text_size_micro"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginRight="@dimen/book_list_item_title_marginend"
        android:layout_marginEnd="@dimen/book_list_item_title_marginend"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/fullBookCover"
        android:layout_toEndOf="@+id/fullBookCover"
        tools:text="Book SubTitle"/>

</RelativeLayout>